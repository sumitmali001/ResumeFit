{
    "version": 2,
    "functions": {
        "server/server.js": {
            "maxDuration": 60
        },
        "api/extract": {
            "maxDuration": 60,
            "bodyParser": false
        }
    },
    "builds": [
        {
            "src": "server/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server/server.js"
        },
        {
            "src": "/",
            "dest": "/public/index.html"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ]
}
